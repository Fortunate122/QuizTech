{
  "extends": "../client/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node"],
    "isolatedModules": false,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx",
    "strict": true,
    "typeRoots": ["../client/node_modules/@types"]
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "../client/src/components/**/*.tsx"
  ]
}
